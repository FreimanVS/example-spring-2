        <!-- AspectJ -->
        <aspectj.version>1.9.2</aspectj.version>

        <!--<servlet.version>4.0.0</servlet.version>-->
        <servlet.version>3.1.0</servlet.version>
        <jsp.version>2.3.1</jsp.version>
